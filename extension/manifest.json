{
  "manifest_version": 3,
  "name": "NUVIA",
  "version": "1.0",
  "description": "AI Chat Assistant",

  "permissions": [
    "sidePanel",
    "storage",
    "scripting",
    "tabs"
  ],

  "side_panel": {
    "default_path": "ui.html"
  },

  "action": {
    "default_title": "Open AI Chat"
  },

  "background": {
    "service_worker": "background.js"
  },

  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],

  "icons": {
    "16": "/icons/N16.png"
  }

}